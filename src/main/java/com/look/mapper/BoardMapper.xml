<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- namespace 속성 값이 중요한 이유는 MyBatis가 Mapper인터페이스와 XML을 인터페이스 이름과 
 		namespace 속성 값으로 판단하기 때문! 
 		
 		인터페이스 이름 = namespace 속성 값 
 	 -->
  <mapper namespace="com.look.mapper.BoardMapper">
 	
  <!-- 게시판 등록 -->
    <insert id="insert">
        
        insert into board(title, content, writer) values (#{title}, #{content}, #{writer})
        
    </insert>
    
    <!-- 게시판 목록 -->
    <select id="getList" resultType="com.look.model.BoardVO">
    
        select * from tbl_freeboard;
    
    </select>
    
   
  </mapper>