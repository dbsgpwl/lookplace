<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.look.mapper.ReviewMapper">
 <!-- 검색 조건문 -->
    <sql id="criteria">
        <trim prefix="where (" suffix=")" prefixOverrides="OR">
            <foreach collection="typeArr" item="type">
                <trim prefix="OR">
                    <choose>
                        <when test="type == 'T'.toString()">
                            title like concat('%',#{keyword},'%') 
                        </when>
                        <when test="type == 'C'.toString()">
                            content like concat('%',#{keyword},'%') 
                        </when>
                        <when test="type == 'W'.toString()">
                            nickname like concat('%',#{keyword},'%' )
                        </when>
                    </choose>
                </trim>
            </foreach>
        </trim>
    
    </sql>
    
	<!-- 전체 내용 조회 -->
	<select id="viewAll" resultType="com.look.model.ReviewDTO">
		SELECT * FROM tbl_review ORDER BY bno DESC
	</select>
	
	<!-- 게시물 목록(페이징) -->
    <select id="getListPaging" resultType="com.look.model.ReviewDTO">
    
          select * from (
                select bno, title, nickname, regdate, updatedate ,hit 
                from tbl_review 
                <if test="keyword != null">
                    <include refid="criteria"></include>
                </if>
                order by bno desc) as T1
        limit #{skip},#{amount}
    
    </select>
			
	 <!-- 게시물 총 개숫 -->
    <select id="getTotal" resultType="int">
    
        select count(*) from tbl_review
        
        <if test="keyword != null">
            <include refid="criteria"></include>
        </if>   
    </select>
    
	<!-- 글 상세조회 -->
	<select id="viewDetail" resultType="com.look.model.ReviewDTO" parameterType="int">
	  SELECT * FROM tbl_review WHERE bno = #{bno}
	</select>
	
	<!-- 조회수 +1 -->
	<update id="plusCnt"  parameterType="int">
		update tbl_review set hit = hit + 1 where bno = #{bno}
	</update>
	
	<!-- 게시판 등록 -->
	<insert id="insertBoard" parameterType="com.look.model.ReviewDTO">
	
		INSERT INTO tbl_review (nickname, title, content)
					VALUES (#{nickname}, #{title}, #{content})
	</insert>
	
	<!-- 게시글 삭제 -->
	<delete id="deleteBoard" parameterType="int">
		DELETE FROM tbl_review WHERE bno = #{bno}
	</delete>
	
	<!-- 게시글 수정 -->
	<update id="updateBoard" parameterType="com.look.model.ReviewDTO">
		UPDATE tbl_review SET title = #{title}, CONTENT = #{content} WHERE bno = #{bno}
	</update>
</mapper>