<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.look.mapper.NoticeMapper">
 
 	<!-- 게시판 등록 -->
    <insert id="enroll">
        
        insert into tbl_board(title, content, nickname) values (#{title}, #{content}, #{nickname})
        
    </insert>
    
     <!-- 게시판 목록 -->
    <select id="getList" resultType="com.look.model.NoticeDTO">
    
        select * from tbl_board
    
    </select>
    
 	 <!-- 게시판 조회 -->
    <select id="getPage" resultType="com.look.model.NoticeDTO">
    
        select * from tbl_board where bno = #{bno}
    
    </select>
 
  </mapper>